# Server configuration
PORT=5000
NODE_ENV=development

# MongoDB connection
# Ganti username, password, dan cluster-url sesuai database kamu
MONGODB_URI=mongodb+srv://your_db_user:your_password@your-cluster-url.mongodb.net/warung-alzhim?retryWrites=true&w=majority
# MONGODB_URI=mongodb://localhost:27017/warung-alzhim

# JWT secret key
JWT_SECRET=your_jwt_secret_key

# Midtrans API keys
MIDTRANS_SERVER_KEY=SB-Mid-server-your-server-key
MIDTRANS_CLIENT_KEY=SB-Mid-client-your-client-key

# Email configuration
EMAIL_USER=youremail@example.com
EMAIL_PASS=your_app_password
